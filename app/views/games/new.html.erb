<div name="card" id="card" name="letters" class= "d-flex justify-content-between">
<% @letters.each do |letter| %>
 <div class= "bg-primary text-white span w-25 m-3 text-center">
 <%= letter %>
 </div>
<%end%>
</div>

<p>What is the longest word you can find?</p>

<form action="/score" method="post" data-turbo="false">
 <input type="text" name="input">
  <input type="submit" value="Play!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
